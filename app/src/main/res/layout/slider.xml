<?xml version="1.0" encoding="utf-8"?>
<android.support.v7.widget.CardView xmlns:android="http://schemas.android.com/apk/res/android"
                                    xmlns:app="http://schemas.android.com/apk/res-auto"

                                    xmlns:tools="http://schemas.android.com/tools" android:layout_width="match_parent"
                                    android:layout_height="150dp"
                                    android:layout_marginTop="20dp"
                                    android:layout_gravity="center"
                                    app:cardCornerRadius="20dp"
                                    android:layout_margin="8dp"
                                    android:elevation="12dp"
                                    app:cardElevation="12dp"
                                    android:id="@+id/menu_item"
                                    >



        <com.facebook.shimmer.ShimmerFrameLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:id="@+id/shimmer"
                android:layout_marginTop="8dp"
                app:layout_constraintTop_toTopOf="parent">
            <LinearLayout
                    android:orientation="horizontal"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent">
                <android.support.v7.widget.CardView
                        android:layout_width="130dp"
                        android:layout_height="112dp"
                        app:cardCornerRadius="12dp"
                        android:layout_gravity="center_vertical"
                        android:elevation="10dp" android:layout_marginTop="5dp" android:layout_marginStart="5dp"
                        android:layout_marginEnd="5dp" android:layout_marginBottom="5dp">
                    <ImageView
                            android:layout_width="136dp"
                            android:layout_height="118dp"
                            android:background="#ddd"
                            android:scaleType="centerCrop"
                            android:id="@+id/menu_item_image" android:layout_marginTop="@dimen/cardview_default_radius"/>
                </android.support.v7.widget.CardView>
                <LinearLayout
                        android:orientation="vertical"
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">
                    <TextView android:layout_width="240dp" android:layout_height="wrap_content"
                    android:layout_marginTop="20dp"
                    android:layout_marginLeft="20dp"
                    android:textSize="25sp"
                    android:typeface="sans"
                    android:background="#dddddd"
                    android:id="@+id/menu_item_title"
                    android:textStyle="bold"
                    android:textColor="#000000"/>

                    <TextView android:layout_width="250dp" android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                              android:background="#ddd"
                    android:id="@+id/menu_item_mins"
                    android:typeface="serif"
                    />

                    <TextView android:layout_width="200dp" android:layout_height="wrap_content"
                    android:layout_marginTop="10dp"
                    android:layout_marginLeft="20dp"
                              android:background="#ddd"
                    android:id="@+id/menu_item_price"
                    android:textColor="#000"
                              android:textSize="15sp"
                    android:textStyle="bold"
                    />
                </LinearLayout>
            </LinearLayout>
        </com.facebook.shimmer.ShimmerFrameLayout>


</android.support.v7.widget.CardView>